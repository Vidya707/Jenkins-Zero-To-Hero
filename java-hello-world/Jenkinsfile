pipeline {
  agent {
    docker { 
        image 'maven:3.8.5-openjdk-17' 
        args '-v /root/.m2:/root/.m2'
        }
   }
  stages {
    stage('Checkout'){
        steps {
            //checkout code
            checkout scm
        }
    }
    stage('Build'){
        steps {
            sh 'java -version'
            sh 'mvn -v'
            sh 'mvn clean package'
        }
    }
  }
  post {
    always {
        archiveArtifacts artifacts: 'target/*.jar', allowEmptyArchive: true
        //clean workspace after build
        cleanWs()
    }
  }
}
